<t name="Payment" t-name="website_sale.payment">
    <t t-call="website.layout">
        <t t-set="additional_title">Shop - Select Payment Method</t>
        <div id="wrap">
            <div class="container oe_website_sale box_border">
                <div>
                    <t t-call="website_sale.wizard_checkout">
                        <t t-set="step" t-value="40"/></t>
                </div>
                <!--<h1 class="mb32">Confirm Order</h1>-->
                <div class="row">
                    <div class="col-md-12">
                        <h3 class="page-header mt16" style="margin-top: 52px !important;font-family: lato;font-size: 18px;font-weight: 600;text-transform: uppercase;border-bottom: 5px solid #F0F0F0;">Order Review</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 mt16">
                        <!--<div class="col-lg-3 col-lg-offset-1 col-sm-3 text-muted" id="right_column">-->
                        <div class="col-lg-6 col-sm-6 col-xs-12" id="right_column" style="padding:0px;">
                            <t t-call="website_sale.bill_to">
                                <t t-set="order" t-value="order"/></t>
                        </div>
                    </div>
                    <div class="col-md-12 col-sm-12 ">
                        <t t-foreach="errors" t-as="error">
                            <div class="alert alert-danger" t-if="error">
                                <h4>
                                    <t t-esc="error[0]"/>
                                </h4>
                                <t t-esc="error[1]"/>
                            </div>
                        </t>
                    </div>
                    <div class="col-md-12 col-sm-12 oe_cart">
                        <table class="table table-condensed js_cart_lines" style="margin-top: 50px;margin-bottom: 0px;" id="cart_products" t-if="website_sale_order and website_sale_order.website_order_line">
                            <thead style="background:#FFC44D;color: black;border-left:4px solid #FFC44D;border-right:4px solid #FFC44D;">
                                <tr>
                                    <th width="150" style="border-right:1px solid #eccb9c;height: 53px !important;padding: 15px;"></th>
                                    <th width="450" style="border-right:1px solid #eccb9c;padding: 15px;">Product Name</th>
                                    <th width="100" style="border-right:1px solid #eccb9c;padding: 15px;">Price</th>
                                    <th width="200" style="border-right:1px solid #eccb9c;padding: 15px;">Quantity</th>
                                    <th width="100" style="border-right:1px solid #eccb9c;padding: 15px;">Subtotal</th>
                                    <!--<th width=""></th>-->
                                </tr>
                            </thead>
                            <tbody>
                                <tr style="border-left: 4px solid #F0F0F0;border-right: 4px solid #F0F0F0;border-bottom: 3px solid #F0F0F0;" t-foreach="website_sale_order.website_order_line" t-as="line">
                                    <td colspan="2" t-if="not line.product_id.product_tmpl_id"/>
                                    <td t-if="line.product_id.product_tmpl_id" style="padding: 8px;" align="center">
                                        <a t-attf-href="/shop/product/#{ slug(line.product_id.product_tmpl_id) }">
                                            <span t-field="line.product_id.image_small" t-options="{'widget': 'image', 'class': 'img-rounded'}"/>
                                        </a>
                                    </td>
                                    <td t-if="line.product_id.product_tmpl_id">
                                        <div style="padding-top: 25px; padding-left:8px;">
                                            <a t-attf-href="/shop/product/#{ slug(line.product_id.product_tmpl_id) }" style="color: black;font-size: 13px;font-family: Lato;text-decoration: none;">
                                                <strong t-field="line.product_id.with_context(display_default_code=False).display_name"/>
                                            </a>
                                        </div>
                                        <!--<div class="text-muted">-->
                                        <!--    <t t-foreach="line.name.splitlines()[1:]" t-as="name_line">-->
                                        <!--        <span><t t-esc="name_line"/></span><br/>-->
                                        <!--    </t>-->
                                        <!--</div>-->
                                    </td>
                                    <td class="" id="td-price" name="price" style="padding-left: 17px;padding-top: 25px;font-weight: 500;">
                                        <span t-field="line.price_unit" style="white-space: nowrap;" t-options="{'widget': 'monetary','from_currency': website_sale_order.pricelist_id.currency_id,'display_currency': website.currency_id}"/>
                                    </td>
                                    <td style="padding-left: 17px;padding-top: 25px;font-weight: 500;">
                                        <div t-esc="line.product_uom_qty"/>
                                    </td>
                                    
                                    <td t-if="line.product_id.product_tmpl_id" style="padding-left: 17px;padding-top: 25px;font-weight: 500;"> 
                                      00.00 ৳
                                    </td>
                                    
                                    <!--<td class="text-center" t-if="line.product_id.product_tmpl_id" style="padding-top: 25px;">-->
                                    <!--    <a href="#" class="js_delete_product no-decoration">-->
                                    <!--        <small>-->
                                    <!--            <i style="color: #FF0002;font-size: 18px;font-weight: 500;" class="fa fa-trash-o"/>-->
                                    <!--        </small>-->
                                    <!--    </a>-->
                                    <!--</td>-->
                                </tr>
                            </tbody>
                        </table>
                        <div>
                            <t t-call="website_sale.total">
                                <t t-set="extra_class" t-value="&quot;col-sm-4 col-sm-offset-8 col-xs-12&quot;"/></t>
                        </div>
                        <div class="clearfix"/>
                        <div class="oe_structure"/>
                        <div class="js_payment mb64 row" t-if="acquirers and website_sale_order.amount_total" id="payment_method">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                <h4>Payment Method</h4>
                                <ul class="list-unstyled">
                                    <t t-foreach="acquirers or []" t-as="acquirer">
                                        <li>
                                            <label t-if="acquirer.button">
                                                <input t-att-value="acquirer.id" type="radio" name="acquirer" t-att-checked="acquirers[0] == acquirer"/>
                                                <span t-field="acquirer.image_small" t-att-title="acquirer.name" t-field-options="{&quot;widget&quot;: &quot;image&quot;, &quot;style&quot;:&quot;max-width: 60px; display: inline-block&quot;}"/>
                                                <span t-field="acquirer.name"/>
                                                <span t-if="acquirer.fees_active">(processing fees apply)</span>
                                            </label>
                                        </li>
                                    </t>
                                    <li t-if="tokens">
                                        <label>
                                            <input type="radio" name="acquirer"/>
                                            <span class="fa fa-2x fa-credit-card"/>
                                                Saved Cards
                                            
                                        </label>
                                        <div class="list-group">
                                            <t t-foreach="tokens" t-as="token">
                                                <a class="list-group-item btn_payment_token" t-att-data-acquirer="token.acquirer_id.id" t-att-data-token="token.id">
                                                    <span class="js_radio fa fa-circle-o"/>&amp;nbsp;
                                                        
                                                    <t t-esc="token.name"/>
                                                    <t t-if="len(set(tokens.mapped('acquirer_id')))&gt;1">
                                                            (
                                                        <t t-esc="token.acquirer_id.name"/>)
                                                        </t>
                                                    <span t-if="token.acquirer_id.fees_active">(processing fees apply)</span>
                                                </a>
                                            </t>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 text-right">
                                <t t-foreach="acquirers or []" t-as="acquirer" id="acquirers_list">
                                    <div t-att-data-id="acquirer.id" class="oe_sale_acquirer_button hidden pull-right">
                                        <div t-raw="acquirer.button"/>
                                        <div class="token_hide">
                                            <div t-if="acquirer.save_token == 'ask'">
                                                <input type="checkbox" name="odoo_save_token"/>
                                                <label for="odoo_save_token">Save my payment data</label>
                                            </div>
                                            <div class="pre_msg" t-field="acquirer.pre_msg"/></div>
                                    </div>
                                </t>
                            </div>
                        </div>
                        <div class="js_payment mb64 row" t-if="not website_sale_order.amount_total" id="payment_method">
                            <div class="col-sm-12">
                                <form target="_self" action="/shop/payment/validate" method="post" class="pull-right">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <a class="btn btn-primary a-submit">
                                        <span t-if="order.amount_total &gt; 0">Pay Now
                                            <span class="fa fa-long-arrow-right"/></span>
                                        <span t-if="order.amount_total == 0">Confirm Order 
                                            <span class="fa fa-long-arrow-right"/></span>
                                    </a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="oe_structure"/></div>
    </t>
</t>

    

    