<data inherit_id="website_sale.product" customize_show="True" name="Select Quantity">
      <xpath expr="//a[@id='add_to_cart']" position="before">
        <div class="css_quantity input-group oe_website_spinner" contenteditable="false">
            <a t-attf-href="#" class="mb8 input-group-addon js_add_cart_json">
                <i class="fa fa-minus"/>
            </a>
            <input type="text" class="form-control quantity" style="width: 90px;" data-min="1" name="add_qty" value="1"/>
            <a t-attf-href="#" class="mb8 input-group-addon float_left js_add_cart_json">
                <i class="fa fa-plus"/>
            </a>
        </div>
      </xpath>
    </data>

    